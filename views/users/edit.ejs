<% include ../partials/header %>

<div class="containter">
    <div class="row">
        <h1 style="text-align: center;">Edit <%=user.username%></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action ="/users/<%= user._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" value="<%=user.username%>" name="user[username]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%=user.firstName%>" name="user[firstName]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%=user.lastName%>" name="user[lastName]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="email" value="<%=user.email%>" name="user[email]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%=user.avatar%>" name="user[avatar]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" value="<%=user.adminCode%>" name="user[adminCode]">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/users/<%=user.id%>">Back To Profile</a>
        </div>
    </div>
<% include ../partials/footer %>